@model IEnumerable<ShifttyMaps.Models.Vehicles>
<table id="tbl_Vehicles" class="table table-responsive dt-responsive nowrap">
    <thead>
        <tr>
            <th>Name</th>
            <th>Vehicle Id</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.name)</td>
        <td>@Html.DisplayFor(modelItem => item.vehicle_id)</td>
        <td>
            <a href="#home" class="btn btn-theme" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa fa-mouse-pointer" style="color:white;"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#" onclick="Edit(@item.id)"><i data-feather="edit"></i> Edit</a>
            <a class="dropdown-item" href="#" onclick="Delete(@item.id)"><i data-feather="edit"></i> Delete</a>
            </div>
        </td>
    </tr>
    }
</table>
